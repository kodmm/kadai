<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<section class="book">
	<h1>Books</h1>
	<table>                                                                
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= link_to book.title, book_path(book) %></td>
				<td><%= link_to book.body, book_path(book) %></td>
				<td><%= link_to 'Show', book_path(book) %></td>
				<td><%= link_to 'Edit',edit_book_path(book) %></td>
				<td><%= link_to 'Destroy', book_path(book), method: :delete , data: {confirm: '削除しますか？'} %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<h3>New book</h3>
	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Creat Book' %>
	<% end %>
</section>




